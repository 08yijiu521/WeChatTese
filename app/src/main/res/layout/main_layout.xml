<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.test.wechat.wxapi.WXEntryActivity" >

    <TextView
        android:id="@+id/token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello_world"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/token"
        android:layout_below="@+id/token"
        android:text="微信登录"
        tools:layout_editor_absoluteY="97dp"
        tools:layout_editor_absoluteX="240dp" />

    <Button
        android:id="@+id/share_to_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_btn"
        android:layout_below="@+id/login_btn"
        android:text="分享好友"
        tools:layout_editor_absoluteY="97dp"
        tools:layout_editor_absoluteX="126dp" />

    <Button
        android:id="@+id/share_to_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/share_to_friend"
        android:layout_below="@+id/share_to_friend"
        android:text="分享朋友圈"
        tools:layout_editor_absoluteY="97dp"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="277dp"
        android:layout_height="249dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="222dp" />

</android.support.constraint.ConstraintLayout>

